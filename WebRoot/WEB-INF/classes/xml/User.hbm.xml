<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.techology.entity.User" >
        <id name="uId">
            <generator class="identity" />
        </id>
       <property name="uName"  />
       <property name="uPwd"  />
       <many-to-one name="uRole"  lazy="false"/>
       <many-to-one name="uSchool" lazy="false" />
    </class>
</hibernate-mapping> 